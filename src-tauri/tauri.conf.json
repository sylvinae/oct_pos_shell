{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pharmacy POS",
  "version": "1.1.0",
  "identifier": "com.stealth.pharmacy-pos",
  "build": {
    "beforeDevCommand": "",
    "devUrl": "https://oct-pharmacy.netlify.app/",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Pharmacy POS",
        "url": "https://oct-pharmacy.netlify.app/",
        "width": 1400,
        "height": 900,
        "minWidth": 1280,
        "minHeight": 720,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "scope": [
          "https://oct-pharmacy.netlify.app/**",
          "https://oct-back-oct-2025.onrender.com/**"
        ]
      },
      "capabilities": ["main"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJDOEZFMkFFRUFGQzQyQzEKUldUQlF2enFydUtQTEJjTlRaYjZsTG11YjZOWDk0NEl3VGM4a2F0bnJsS2FNTHdTOFVBNVhHRGgK",
      "endpoints": [
        "https://github.com/sylvinae/oct_pos_shell/releases/latest/download/latest.json"
      ]
    }
  }
}
